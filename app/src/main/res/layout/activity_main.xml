<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.android.beaconyx.yesdexproject.Activity.MainActivity">
    <!--메인이미지-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/main_banner" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="4">

        <TableRow
            android:layout_weight="1"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@drawable/main_button_map"
                android:onClick="mapInfoActivityOperation" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:weightSum="2">

            <!--Yesdex 2017-->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/main_button_a"
                android:onClick="aInfoActivityOperation" />
            <!--행사안내-->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/main_button_b"
                android:onClick="bInfoActivityOperation" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:weightSum="2">
            <!--종합학술대회-->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/main_button_c"
                android:onClick="cInfoActivityOperation" />

            <!--강의 출석 및 현황-->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/main_button_d"
                android:onClick="dInfoActivityOperation" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:weightSum="2">
            <!--교통 숙박 관광-->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/main_button_e"
                android:onClick="eInfoActivityOperation" />

            <!--부스위치안내-->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/main_button_e" />

        </TableRow>

    </TableLayout>


</LinearLayout>
